</p>

<p>
    <b>Referencia:</b>
    <%= @usuario.Referencia %>
</p>

<p>
    <b>Zona</b>
    <%= @usuario.Zona %>
</p>
<% end %>

<% if @usuario.idTipoUsuario != 1 && @usuario.idTipoUsuario != 2%>
<p>
    <b>Ciudad</b>
    <%= @usuario.ciud.Nombre %>
</p>

<p>
    <b>Provincia</b>
    <%= @usuario.ciud.provincia.Nombre %>
</p>
<% end %>

<p>
    <b>Telefono:</b>
    <%= @usuario.Telefono %>
</p>

