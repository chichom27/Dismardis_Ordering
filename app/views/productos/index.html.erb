<h1>Listado de Productos</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Empresa</th>
    <th>Codigo</th>
  </tr>

<% @productos.each do |producto| %>
  <tr>
    <td><%= link_to producto.Nombre, producto %></td>
    <td><%= producto.emp.Nombre %></td>
    <td><%= producto.Codigo %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Producto', new_producto_path %>
